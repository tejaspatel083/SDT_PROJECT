<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".RecipeDescription">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1300dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/mycardview"
                android:layout_width="380dp"
                android:layout_height="380dp"
                android:layout_gravity="center"
                android:layout_margin="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/imgviewmylist"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/recipename_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="430dp"/>

            <TextView
                android:id="@+id/cookname_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="480dp"/>


            <TextView
                android:id="@+id/recipetime_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="530dp" />

            <TextView
                android:id="@+id/recipecost_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="580dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="630dp"
                android:text=" Recipe :     "
                android:inputType="text"/>

            <TextView
                android:id="@+id/fullrecipe_detail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="630dp"
                android:inputType="textMultiLine"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>