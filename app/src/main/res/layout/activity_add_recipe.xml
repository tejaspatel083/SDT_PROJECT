<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AddRecipe">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ImageView
                android:id="@+id/Add_MyRecipeImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="215dp"
                android:hint="Click to add image" />

            <EditText
                android:id="@+id/Add_MyRecipeName"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                android:background="@drawable/text_background"
                android:drawableLeft="@drawable/ic_restaurant_black_24dp"
                android:hint=" Recipe Name*"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/Add_CookName"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="340dp"
                android:background="@drawable/text_background"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:hint=" Cook Name*"
                android:inputType="textPersonName"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/Add_EstimatedTime"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="400dp"
                android:background="@drawable/text_background"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:hint=" Estimated Time*"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/Add_EstimatedCost"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="460dp"
                android:background="@drawable/text_background"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:hint=" Estimated Cost*"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/Add_RecipeSteps"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="520dp"
                android:background="@drawable/text_background"
                android:drawableLeft="@drawable/ic_room_service_black_24dp"
                android:hint=" Recipe*"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:minLines="2"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/Add_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="635dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_background"
                android:text="Add" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>